---
import Nav from "@components/nav/Nav.astro";
import Layout from "./Layout.astro";
import "@styles/global.css"

---

<Layout>
	<Nav />
  <main class="flex flex-col min-h-[calc(100vh-70px)] h-max dark:bg-[#4c4c4c]">
    <div class="
      flex
      flex-col
      flex-grow
      md:m-[22px]  
      p-[25px]
      mt-5
      bg-white
      dark:bg-[#1E1E1E]
      text-[#7A7A7A]
      dark:text-[#DADADA]
      rounded
      shadow-[0_0_30px_0px_rgba(0,0,0,0.2)]
    ">
      <slot />
    </div>
  </main>
</Layout>